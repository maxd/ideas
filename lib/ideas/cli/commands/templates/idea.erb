idea '<%= self[:title] %>' do
<% if self[:short_description] -%>
  short_description '<%= self[:short_description] %>'
<% end -%>

<% if self[:description] -%>
  description <<-EOF
    <%= self[:description] %>
  EOF
<% end -%>

<% if self[:state] -%>
  state <%= ":#{self[:state]}" %>
<% end -%>
<% if self[:tags] -%>
  tags <%= self[:tags].map{|t| ":#{t}"}.join(', ') %>
<% end -%>

<% self[:features] && self[:features].each do |feature| -%>
  feature <%= feature[:weight] %>, '<%= feature[:title] %>'
<% end -%>
end
